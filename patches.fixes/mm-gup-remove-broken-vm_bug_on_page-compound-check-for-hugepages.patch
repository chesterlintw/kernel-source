--- a/mm/gup.c
+++ b/mm/gup.c
@@ -1352,7 +1352,6 @@ static int gup_huge_pmd(pmd_t orig, pmd_
 	head = pmd_page(orig);
 	page = head + ((addr & ~PMD_MASK) >> PAGE_SHIFT);
 	do {
-		VM_BUG_ON_PAGE(compound_head(page) != head, page);
 		pages[*nr] = page;
 		(*nr)++;
 		page++;
@@ -1391,7 +1390,6 @@ static int gup_huge_pud(pud_t orig, pud_
